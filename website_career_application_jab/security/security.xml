<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Category for Career Application module -->
        <record id="module_category_career_application" model="ir.module.category">
            <field name="name">Career Applications</field>
            <field name="description">Manage career applications from website</field>
            <field name="sequence">20</field>
        </record>

        <!-- User Group: Career Application User -->
        <record id="group_career_application_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_career_application"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Manager Group: Career Application Manager -->
        <record id="group_career_application_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_career_application"/>
            <field name="implied_ids" eval="[(4, ref('group_career_application_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>
